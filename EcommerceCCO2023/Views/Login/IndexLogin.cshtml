@model EcommerceCCO2023.Models.Cliente

<style>
    .card {
        box-shadow: 4px 6px 13px -3px rgba(79, 55, 55, 0.75);
        -webkit-box-shadow: 4px 6px 13px -3px rgba(79, 55, 55, 0.75);
        -moz-box-shadow: 4px 6px 13px -3px rgba(79, 55, 55, 0.75);
        background-color: #ededed;
        width: 300px; 
        height: 300px;
        display: flex;

        justify-content: space-between;
    }
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>

@{
    ViewData["Title"] = "Login";
}

<form asp-controller="Login" asp-action="IndexLogin" method="POST" class="mt-5">
                <h2 class="text-center">Login</h2>
                <div class="card p-3">
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <label>Senha</label>
                        <input asp-for="Senha" type="password" class="form-control" />
                        <span asp-validation-for="Senha"></span>
                    </div>
                    <div class="buttons text-center">
                        <button class="btn btn-primary"><a asp-action="Create" asp-controller="Cliente" class="text-white" style="text-decoration: none">Cadastro</a></button>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </form>
