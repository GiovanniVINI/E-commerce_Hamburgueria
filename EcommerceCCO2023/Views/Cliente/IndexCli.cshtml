@model List<Cliente>

<table class="table table-striped table-hover">
    @if (Model != null)
    {

        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Senha</th>
            <th></th>
        </tr>

        @foreach (var c in Model)
        {
            <tr>
                <td>@c.IdCliente</td>
                <td>@c.Nome</td>
                <td>@c.Email</td>
                <td>@c.Senha</td>
                <td>
                    <a class="btn btn-sm btn-success" href="/Cliente/Update/@c.IdCliente">Editar</a>
                    <a class="btn btn-sm btn-warning" href="/Cliente/Delete/@c.IdCliente">Apagar</a>
                </td>
            </tr>

           
     
        }
    }
    else
    {
        <tr>
            <td> VOLTOU NULL </td>
        </tr>
    }

</table>
